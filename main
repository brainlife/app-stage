#!/bin/bash

#PBS -l nodes=1:ppn=1
#PBS -l vmem=1gb
#PBS -l walltime=00:05:00
#PBS -N stage

set -e
set -x

#send all env with BRAINLIFE_ prefix to singularity
for e in $(env); do
  if [[ $e == BRAINLIFE_* ]]; then
    export SINGULARITYENV_$e
  fi
done

echo "staging.."
timeout 240 singularity exec -e docker://brainlife/datalad:0.13.6 ./main.py

echo "staged!"
